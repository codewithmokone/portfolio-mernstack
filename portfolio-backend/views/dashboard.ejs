<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css">
    <title>Portfolio Dashboard</title>
</head>
<body>
    <header>
        <div class="container">
            <span>Dashboard</span>
            <nav>
                <a href="#">Home</a>
                <a href="#">Upload</a>
            </nav>
        </div>
    </header>
    <main>
        <div class="main-container">
            <div>
                <h1>Upload A Project</h1>
            </div>
            <div class="main-content">
                <div class="display-data">
                   <% data.forEach(function(project) { %>
                        <div class="card">
                                <img
                                    src="data:image/<%=project.image.contentType%>;base64,
                                            <%=project.image.data.toString('base64')%>"
                                />
                                <div class="card-info">
                                    <h4><%= project.title %></h4>
                                    <p><%= project.desc %></p>
                                    <p><%= project.category %></p>
                                    <p><%= project.technologies %></p>
                                    <div class="card-buttons">
                                        <div class="btns">
                                            <a href="#">Live Link</a>
                                            <a href="#">Github Link</a>
                                        </div>
                                        <div class="btns">
                                            <a href="#">Edit</a>
                                            <a href="#">Delete</a>
                                        </div>
                                    </div>
                                    
                                </div>
                        </div>
                    <% }) %>
                </div>
                <div class="upload-data">
                    <form action="/api/portfolio/upload" method="POST" enctype="multipart/form-data" >
                        <div>
                            <label for="title">Title</label>
                            <input 
                                type="text" 
                                name="title" 
                                id="title"
                                value=""
                                placeholder="Title"
                                required
                            >
                        </div>
                        <div>
                            <label for="category">Category</label>
                            <select name="category" id="category">
                                <option value="Web Application">Web Application</option>
                                <option value="API Integration">API Integration</option>
                                <option value="Frontend">Frontend</option>
                                <option value="Full Stack">Full Stack</option>
                            </select>
                        </div>
                        <div>
                            <label for="desc">Description</label>
                            <input 
                                type="text" 
                                name="desc" 
                                id="desc"
                                value=""
                                placeholder="Description"
                                required
                            >
                        </div>
                        <div class="checkbox-container">
                            <label for="technologies">Technologies</label>
                            <div class="checkbox-item">   
                                <input class="checkbox" type="checkbox" id="html" name="html" value="HTML">
                                <label for="HTML"> HTML</label>
                            </div>
                            <div class="checkbox-item">
                                <input class="checkbox" type="checkbox" id="css" name="css" value="CSS">
                                <label for="CSS"> CSS</label>
                            </div>
                            <div class="checkbox-item">
                                <input class="checkbox" type="checkbox" id="Javascript" name="Javascript" value="Javascript">
                                <label for="Javascript"> Javascript</label>
                            </div>
                            
                        </div>
                        <div>
                            <label for="liveLink">Live Link</label>
                            <input 
                                type="text" 
                                name="liveLink" 
                                id="liveLink"
                                value=""
                                placeholder="Live Link"
                                required
                            >
                        </div>
                        <div>
                            <label for="githubLink">Github Link</label>
                            <input 
                                type="text" 
                                name="githubLink" 
                                id="githubLink"
                                value=""
                                placeholder="Github Link"
                                required
                            >
                        </div>
                        <div>
                            <label for="image">Upload Image</label>
                            <input 
                                type="file" 
                                name="image" 
                                id="image"
                                value=""
                                required
                            >
                        </div>
                        <div>
                            <button type="submit">Submit</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </main>
    <footer></footer>
</body>
</html>